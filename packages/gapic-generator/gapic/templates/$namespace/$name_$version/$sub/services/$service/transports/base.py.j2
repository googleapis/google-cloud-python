    @property
    def {{ method.name|snake_case }}(self) -> typing.Callable[
            [{{ method.input.ident }}],
            {{ method.output.ident }}]:
        raise NotImplementedError
    {%- endfor %}


__all__ = (
    '{{ service.name }}Transport',
)
