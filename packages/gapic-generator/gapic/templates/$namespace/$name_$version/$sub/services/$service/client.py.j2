            gapic_v1.routing_header.to_grpc_metadata((
                {%- for field_header in method.field_headers %}
                ('{{ field_header }}', request.{{ field_header }}),
                {%- endfor %}
            )),
        )
        {%- endif %}

        # Send the request.
        {% if not method.void %}response = {% endif %}rpc(
            request,
            retry=retry,
            timeout=timeout,
            metadata=metadata,
        )
