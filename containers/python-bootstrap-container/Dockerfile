# Use a multi-stage docker build to limit production dependencies.

FROM python:3.11.4-buster

RUN apt update

RUN apt install -y jq

# Now copy all the code so we can compile
COPY . /

RUN chmod 755 /entrypoint.sh

ENTRYPOINT [ "/bin/bash" ]
CMD [ "/entrypoint.sh" ]
